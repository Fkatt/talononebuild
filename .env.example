# TalonForge Root Environment Variables
# Copy this file to .env and fill in the values

# Database Configuration
# Get this from Coolify after creating a PostgreSQL resource
DATABASE_URL=postgresql://user:pass@tf-db:5432/talonforge

# Security Keys
# Generate using: openssl rand -hex 32 (for ENCRYPTION_KEY)
# Generate using: openssl rand -hex 64 (for JWT_SECRET)
ENCRYPTION_KEY=generate-32-byte-random-string
JWT_SECRET=generate-64-byte-random-string

# Server Configuration
PORT=3000
NODE_ENV=production

# Optional: Internal PostgreSQL Configuration
# Only needed if not using Coolify managed database
POSTGRES_DB=talonforge
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
